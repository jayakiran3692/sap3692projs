{
  "name": "BPA_CAP_Integration",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.3.1",
    "@sap-cloud-sdk/resilience": "^4.3.1",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-vendor": "cds watch --open com.ust.vendor.vendor/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/vendor"
  ],
  "cds": {
    "requires": {
      "bpa": {
        "kind": "rest",
        "credentials": {
          "destination": "sap_bpa"
        }
      }
    }
  }
}
