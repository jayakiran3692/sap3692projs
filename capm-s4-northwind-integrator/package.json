{
  "name": "capm-s4-northwind-integrator",
  "version": "1.0.0",
  "description": "CAPM app with Header-Item model, S/4HANA external API consumption, and Northwind axios integration",
  "private": true,
  "scripts": {
    "start": "cds run",
    "watch": "cds watch"
  },
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "axios": "^1.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": [
          "db/"
        ]
      },
      "API_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_SALES_ORDER_SRV",
        "credentials": {
          "destination": "S4HANA"
        }
      },
      "Northwind": {
        "kind": "rest",
        "credentials": {
          "url": "https://services.odata.org/northwind/northwind.svc"
        }
      }
    },
    "odata": {
      "version": "v4"
    }
  }
}